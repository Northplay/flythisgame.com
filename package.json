{
	"name": "flythisgame.com",
	"version": "1.0.0",
	"description": "Website for Fly THIS!",
	"repository": "https://github.com/northplay/flythisgame.com.git",
	"author": "Kristian Andersen <kristian@northplay.co>",
	"license": "ISC",
	"private": true,
	"engines": {
		"node": "13.x"
	},
	"scripts": {
		"dev": "next dev",
		"build": "next build",
		"start": "next start -p $PORT",
		"heroku-postbuild": "next build",
		"deploy": "git push origin master && git push web master"
	},
	"dependencies": {
		"babel-plugin-inline-react-svg": "^1.1.0",
		"babel-plugin-module-resolver": "^3.1.1",
		"babel-plugin-polished": "^1.1.0",
		"babel-plugin-styled-components": "^1.9.3",
		"isomorphic-unfetch": "^3.0.0",
		"mobile-detect": "^1.4.3",
		"next": "^9.3.2",
		"next-ga": "^2.3.4",
		"next-images": "^1.0.3",
		"polished": "^2.3.1",
		"prop-types": "^15.6.2",
		"react": "^16.6.3",
		"react-dom": "^16.6.3",
		"react-ga": "^2.5.6",
		"react-image-lightbox": "^5.1.0",
		"react-player": "^1.7.1",
		"react-unity-webgl": "^7.0.7",
		"styled-components": "^4.1.2",
		"styled-reset": "^1.6.2"
	},
	"devDependencies": {
		"babel-eslint": "^10.0.1",
		"eslint": "^5.10.0",
		"eslint-config-airbnb": "^17.1.0",
		"eslint-config-prettier": "^3.3.0",
		"eslint-import-resolver-babel-module": "^4.0.0",
		"eslint-plugin-import": "^2.14.0",
		"eslint-plugin-jsx-a11y": "^6.1.2",
		"eslint-plugin-prettier": "^3.0.0",
		"eslint-plugin-react": "^7.11.1",
		"prettier": "^1.15.3"
	},
	"babel": {
		"presets": [
			"next/babel"
		],
		"plugins": [
			[
				"module-resolver",
				{
					"root": [
						"./"
					]
				}
			],
			[
				"inline-react-svg",
				{
					"svgo": {
						"plugins": [
							{
								"removeAttrs": {
									"attrs": "(data-name)"
								}
							},
							{
								"cleanupIDs": true
							}
						]
					}
				}
			],
			[
				"styled-components",
				{
					"ssr": true,
					"displayName": true,
					"preprocess": false
				}
			],
			[
				"babel-plugin-polished"
			]
		]
	},
	"prettier": {
		"printWidth": 100,
		"tabWidth": 2,
		"useTabs": true,
		"semi": true,
		"singleQuote": true,
		"trailingComma": "all",
		"bracketSpacing": true,
		"jsxBracketSameLine": true,
		"arrowParens": "avoid"
	},
	"eslintConfig": {
		"settings": {
			"import/resolver": {
				"babel-module": {
					"root": [
						"./"
					]
				}
			}
		},
		"env": {
			"browser": true,
			"es6": true,
			"node": true
		},
		"extends": [
			"airbnb",
			"prettier",
			"prettier/react"
		],
		"parser": "babel-eslint",
		"parserOptions": {
			"ecmaFeatures": {
				"jsx": true,
				"classes": true,
				"impliedStrict": true
			},
			"ecmaVersion": 2018,
			"sourceType": "module"
		},
		"plugins": [
			"react",
			"prettier"
		],
		"rules": {
			"react/jsx-filename-extension": [
				"warn",
				{
					"extensions": [
						".js"
					]
				}
			],
			"react/prop-types": [
				"warn",
				{
					"ignore": [
						"children"
					]
				}
			]
		}
	}
}
